<section>
    <div class="favAlbums">
        <h2>My Albums</h2>
        <div class="albums_group">
            <ul>
                {{#each albumsArtist}}
                <li>
                    <div class="album_info">
                        <img src="{{name}}.jpg" alt="{{name}}">
                        <p>{{name}}</p>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</section>